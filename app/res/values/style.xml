<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="personal_board_list_footer_button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/simple_button_selector</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- simple button -->
    <style name="simple_button">
        <item name="android:background">@drawable/simple_button_selector</item>
        <item name="android:textColor">@color/simiple_button_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
    </style>

    <style name="blue_button">
        <item name="android:textColor">@color/simiple_button_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="normalText.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="normalText.span">
        <item name="android:textColor">#888</item>
    </style>

    <style name="listview">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@drawable/abs__list_selector_holo_dark</item>
     </style>

    <style name="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/simple_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/list_divider</item>
    </style>

    <style name="board_name">
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:textColor">#75899e</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="post_name_common">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">4.0</item>
        <item name="android:shadowDy">4.0</item>
        <item name="android:textColor">#777</item>
        <item name="android:textSize">13sp</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="post_title_style">
        <item name="android:textColor">#708090</item>
        <item name="android:textSize">13sp</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
 </resources>